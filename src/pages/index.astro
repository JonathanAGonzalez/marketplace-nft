---
import Layout from '../layouts/Layout.astro';
import { CarrouselHeroBanner } from '../components/atomic/organisms/CarrouselHeroBanner';
import ButtonAnimated from '../components/atomic/atoms/buttons/ButtonAnimated.astro';
import { NftsLists } from '../components/atomic/organisms/NftsLists';
---

<Layout title='Welcome to Marketplace NFTs Jona.'>
  <main>
    <CarrouselHeroBanner client:only='react'>
      <ButtonAnimated title='MINT' href='/explore' />
    </CarrouselHeroBanner>
    <NftsLists client:only='react' />
  </main>
</Layout>

<script>
  import { Buffer } from 'buffer';
  import process from 'process';
  window.Buffer = Buffer;
  window.process = process;
  let global;
  if (global === undefined) {
    global = window;
  }
</script>
